
<movable-area class="movable-area">
  <movable-view class="movable-view" x="{{orcbtn.x}}" y="{{orcbtn.y}}" bindchange="btnMove" bindtap="toOCR" direction="all">
    <image class="movable-img" src="cloud://production-5gn4rq0l111386bb.7072-production-5gn4rq0l111386bb-1302043964/OCR.png"></image>
  </movable-view>
  <view class="container">
    <van-tabs
      active="{{ currentPage }}"
      sticky
      title-active-color="#6A84E3"
      color="#6A84E3"
      bind:change="onTabChange">
      <van-tab title="小程序码" :name="0">
        <view wx:if="{{currentPage == 0}}">
          <wxacode/>
        </view>
      </van-tab>
      <van-tab title="ocr" :name="1">
        <view wx:if="{{currentPage == 1}}">
          <ocr/>
        </view>
      </van-tab>
    </van-tabs>
  </view>
</movable-area>