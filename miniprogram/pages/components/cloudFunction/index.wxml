<movable-area class="movable-area">
  <movable-view class="movable-view" x="{{orcbtn.x}}" y="{{orcbtn.y}}" bindchange="btnMove" bindtap="toOCR" direction="all">
    <image class="movable-img" src="/lib/pic/图片识别.png"></image>
  </movable-view>
  <view class="container">
    <van-tabs
      active="{{ currentPage }}"
      sticky
      title-active-color="#6A84E3"
      color="#6A84E3"
      bind:change="onTabChange">
      <van-tab title="简单云函数" :name="0">
        <view wx:if="{{currentPage == 0}}">
          <basicFunction></basicFunction>
        </view>
      </van-tab>
      <van-tab title="获取信息" :name="1">
        <view wx:if="{{currentPage == 1}}">
          <userInfo></userInfo>
        </view>
      </van-tab>
    </van-tabs>
  </view>
</movable-area>