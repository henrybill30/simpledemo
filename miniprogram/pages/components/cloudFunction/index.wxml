<!--miniprogram/pages/components/cloudFunction/index.wxml-->
<van-tabs
  active="{{ currentPage }}"
  sticky
  title-active-color="#6A84E3"
  color="#6A84E3"
  bind:change="onTabChange">
  <van-tab title="简单云函数" :name="0">
    <view wx:if="{{currentPage == 0}}">
      <basicFunction></basicFunction>
    </view>
  </van-tab>
  <van-tab title="获取信息" :name="1">
    <view wx:if="{{currentPage == 1}}">
      <userInfo></userInfo>
    </view>
  </van-tab>
</van-tabs>