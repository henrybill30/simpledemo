    <view class="view" wx:if="{{swiperitem[4].show}}">
      <scroll-view scroll-y="{{true}}" class="scroll-area">
        <view>
          <demo-block title="基础用法">

            <view class="page-section-title">传入html字符串</view>
            <demo-code height="120" htmlcode="{{richtextcode[0].html}}" jscode="{{richtextcode[0].js}}" csscode="{{richtextcode[0].css}}">
              <view class="page-section">
                <view class="rich-text-wrp">
                  <rich-text nodes="{{html}}" bindtap="tap"></rich-text>
                </view>
              </view>
            </demo-code>

            <view class="page-section-title">传入节点列表</view>
            <demo-code height="120" htmlcode="{{richtextcode[1].html}}" jscode="{{richtextcode[1].js}}" csscode="{{richtextcode[1].css}}">
              <view class="page-section">
                <view class="rich-text-wrp">
                  <rich-text nodes="{{nodes}}" bindtap="tap"></rich-text>
                </view>
              </view>
            </demo-code>
          </demo-block>

          <demo-block title="增强用法">
            <view class="page-section-title">显示连续空格</view>
            <demo-code height="100" htmlcode="{{richtextcode[2].html}}" jscode="{{richtextcode[2].js}}" csscode="{{richtextcode[2].css}}">
              <view class="page-section">
                <view class="rich-text-wrp">
                  <rich-text space="nbsp" nodes="{{nbsphtml}}"></rich-text>
                </view>
              </view>
            </demo-code>
            <demo-code height="300" htmlcode="{{richtextcode[3].html}}" jscode="{{richtextcode[3].js}}" csscode="{{richtextcode[3].css}}">
