                <view class="rich-text-wrp">
                  <rich-text space="ensp" nodes="{{ensphtml}}"></rich-text>
                </view>
              </view>
            </demo-code>
            <demo-code height="200" htmlcode="{{richtextcode[4].html}}" jscode="{{richtextcode[4].js}}" csscode="{{richtextcode[4].css}}">
