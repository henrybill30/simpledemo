@import "../../../lib/weui.wxss";
.left-btn{
  position: fixed;
  left: 5rpx;
  top:45%;
}
.right-btn{
  position: fixed;
  right: 5rpx;
  top:45%;
}
.map {
  width: 95%;
  height:350px;
  border-style: solid;
  border-color: rgb(199, 202, 199);
  margin-left: auto;
  margin-right: auto
}
.left {
  width: 47%;
  height: 36px;
  border-style: solid;
  border-color: rgb(199, 202, 199);
  float: left;
  margin-left: auto;
  margin-right: auto
}
.right {
  width: 47%;
  height: 36px;
  border-style: solid;
  border-color: rgb(199, 202, 199);
  float: right;
  margin-left: auto;
  margin-right: auto
}
.text {
  width: 50%;
  height: 100%;
  float: left;
  font-size: 20rpx;
}
.switch {
  width: 45%;
  height: 100%;
  float: right
}
.canvas {
  width: 100%;
  height: 350px;
  background-color: whitesmoke;
  border-style: solid;
  border-color: rgb(199, 202, 199);
  margin-left: auto;
  margin-right: auto
}
.shape {
  width: 15%;
  height: 50px;
  float: left;
  padding: 0.5%
}
.direction {
  position: absolute;
  height: 30px;
  width: 35px;
  margin: 5px;
  bottom: 15px;
}
.flash {
  position: absolute;
  height: 30px;
  width: 25px;
  margin: 5px;
  top: 15px;
}
.takePhoto {
  position: absolute;
  background-color: white;
  height: 30px;
  width: 40px;
  margin: auto;
  top: 255px;
  left: 0;
  right: 0;
}
.view1 {
  flex: display;
  width: 100%;
  height: 30px;
}
.look {
  float: left
}
.record {
  float: right
}
.border{
  border: 4rpx solid #ACACAC;
  margin: 20rpx;
  padding-left: 20rpx;
}